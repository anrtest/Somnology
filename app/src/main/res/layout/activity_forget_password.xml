<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carobar.somnology.ForgetPassword"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/background_2x">

    <include
        android:id="@+id/forgetPassword_Header"
        layout="@layout/activity_header" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/signInImageContent"
        android:paddingLeft="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPassword_Header"
        app:srcCompat="@drawable/logo_2x" />


    <EditText
        android:id="@+id/txtEmailForgetPswd"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textfield_dark_bg_2x"
        android:ems="10"
        android:hint="@string/email_addressText"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#20B2AA"
        android:textColorHint="#20B2AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnSendEmailForgetPswd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textfield_large_light_2x"
        android:backgroundTint="?attr/colorControlActivated"
        android:text="Send Password"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailForgetPswd"
        tools:targetApi="lollipop" />



</android.support.constraint.ConstraintLayout>