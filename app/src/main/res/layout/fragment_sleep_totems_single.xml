<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleep_totems_single"
    android:background="@drawable/background_2x">


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/sleepTotemSingle_nameRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <include
            android:id="@+id/sleep_totem_single_header"
            layout="@layout/activity_header" />

        <LinearLayout
            android:id="@+id/sleep_totemssingleLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sleep_totem_single_header"
            android:background="@color/settingsButtonColor"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="8">

            <ImageView
                android:id="@+id/sleepTotems_singleGifImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_weight="2"
                />

            <!--<ImageView-->
                <!--android:id="@+id/sleepTotems_singleGifImageView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2"-->
                <!--android:background="@drawable/sheep_2x"/>-->

            <!--<pl.droidsonroids.gif.GifImageView-->
                <!--android:id="@+id/sleeptotems_gifView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="2"-->
                <!--/>-->

            <TextView
                android:id="@+id/sleep_totems_singleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dolphin"
                android:textSize="@dimen/_30sdp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fillViewport="true"
                android:gravity="center"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="56dp">

            <TextView
                android:id="@+id/sleep_totems_secondTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/dolphion"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingLeft="25dp"
                />

            </ScrollView>

            <Button
                android:id="@+id/sleepTotems_single_saveBtn"
                android:layout_width="299dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/blue_button_bg_2x"
                android:text="Purchase 50 Stars"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack" />

        </LinearLayout>
        <include
            android:id="@+id/sleepTotemsSingleIncludeFooter"
            layout="@layout/activity_bottom_navigation"/>

    </RelativeLayout>



</FrameLayout>