<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stop_bang"
    android:background="@drawable/background_2x">
    <RelativeLayout
        android:id="@+id/settingsConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/stopBang_header"
            layout="@layout/activity_header" />



        <ScrollView
            android:id="@+id/settingsConfig_ScrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/stopBang_header"
            android:gravity="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="56dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:weightSum="12"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/stopBang_header_message"
                    android:layout_weight="2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@android:color/black"/>

                <Switch
                    android:id="@+id/stopBang_snore"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Do You Snore?"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textOff="No"
                    android:textOn="Yes"
                    android:checked="true"
                    android:showText="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@android:color/black"/>

                <!--<FrameLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
