                        <!--android:orientation="horizontal" >-->
                        <!--<ImageButton-->
                            <!--android:id="@+id/handle"-->
                            <!--android:layout_width="54dp"-->
                            <!--android:layout_height="54dp"-->
                            <!--android:background="#00000000"-->
                            <!--android:src="@drawable/ios_retina_toggle_button" />-->
