<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro_TapTheOwl"
    android:background="@drawable/intro_1_2x"
    >

    <ImageView
        android:id="@+id/intro1_owlIcon"
        android:layout_width="108dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="21dp"
        android:layout_marginTop="85dp"
        android:layout_weight=".7"
        android:adjustViewBounds="false"
        android:alpha="1"
        android:background="@drawable/owl_icon_2x"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/introSpeechTxtView"
        style="@style/introSpeechText"
        android:layout_width="166dp"
        android:layout_height="117dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical|left"
        android:layout_marginStart="18dp"
        android:layout_marginTop="35dp"
        android:layout_weight="1.1"
        android:alpha="0"
        android:background="@drawable/speech_bubble_2x"
        android:text="@string/intro1Text"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/intro1_owlIcon"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/BtnInroTapTheOwlNext"
        style="@style/OrangeButtonText"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_button_orange_2x"
        android:text="Next"
        android:textAllCaps="false"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>