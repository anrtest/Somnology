<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro_buy_sleep_totems"
    android:background="@drawable/bg_2x">


    <ImageView
        android:id="@+id/intro4_owlIcon"
        android:layout_width="107dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:background="@drawable/owl_cut_2x"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/intro4_phone_mock"
        app:layout_constraintStart_toStartOf="@+id/intro4_phone_mock" />

    <TextView
        android:id="@+id/introSpeech4TxtView"
        style="@style/introSpeechText"
        android:layout_width="166dp"
        android:layout_height="117dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="61dp"
        android:layout_marginStart="20dp"
        android:alpha="0"
        android:background="@drawable/speech_bubble_2x"
        android:text="@string/intro4Text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/intro4_owlIcon"
        app:layout_constraintStart_toEndOf="@+id/intro4_owlIcon" />

    <Button
        android:id="@+id/BtnInroBuySleepTotemsFinish"
        style="@style/OrangeButtonText"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_button_orange_2x"

        android:text="Finish"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/intro4_phone_mock"
        android:layout_width="287dp"
        android:layout_height="384dp"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/phone_mock_2x"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/intro4_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/intro4_gradient"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@drawable/gradient_opacity_2x"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>