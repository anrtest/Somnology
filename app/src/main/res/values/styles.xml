<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="OrangeText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ec664b</item>
    </style>

    <style name="OrangeButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">#ec664b</item>
    </style>

    <style name="introSpeechText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#04181E</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
    </style>

    <style name="introSpeech2Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#04181E</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">right|top</item>
    </style>

    <style name="introSpeech3Text" parent="TextAppearance.AppCompat">

        <item name="android:textColor">#04181E</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="introSliders" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="resetPassword" parent="TextAppearance.AppCompat">

        <item name="android:textAlignment">center</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">#16454c</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="signinSignupPage" parent="TextAppearance.AppCompat">

        <item name="android:textAlignment">center</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">#16454c</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!-- Alert Dialog -->
    <style name="alertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:background">@color/settingsButtonColor</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/background_spinner</item>
    </style>

</resources>
